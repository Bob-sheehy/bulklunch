<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1>BulkLunch Deals</h1>
  <h3>The best luch deals in the world</h3>
  <p>Brand new Irish Startup</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>


<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.name %></td>
        <td><%= deal.location %></td>
        <td><%= deal.price %></td>
        <td><%= link_to 'Show', deal, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', deal, class: "btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deal', new_deal_path, class: "btn btn-link" %>
